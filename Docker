# Stage 1: Builder
FROM python:3.11-slim as builder
WORKDIR /app
ENV PYTHONUNBUFFERED 1

# 1. Install dependencies
COPY requirements.txt .
RUN pip wheel --no-cache-dir --no-deps --wheel-dir /usr/src/app/wheels -r requirements.txt

# Stage 2: Final Image
FROM python:3.11-slim
WORKDIR /app

# 2. Copy installed dependencies from builder
COPY --from=builder /usr/src/app/wheels /usr/src/app/wheels
COPY --from=builder /usr/bin/dumb-init /usr/bin/

# 3. Install packages from wheels (faster)
RUN pip install --no-cache /usr/src/app/wheels/*

# 4. Copy the application source code
COPY . .

# Ensure the entry point (main.py) is accessible
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
